        <activity
            android:name="com.myapp.activity.MainActivity"
            android:exported="true"
            android:configChanges="orientation|keyboardHidden|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name="com.myapp.Wifip2pService" />

        <activity android:name="com.myapp.activity.SendCameraActivity"
            android:configChanges="orientation|keyboardHidden|screenSize">

            <intent-filter>
                <action android:name="android.nfc.action.NDEF_DISCOVERED" />
                <data android:mimeType="text/plain" />
            </intent-filter>

            <intent-filter>
                <action android:name="android.nfc.action.TAG_DISCOVERED" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="text/plain" />
            </intent-filter>

            <intent-filter>
                <action android:name="android.nfc.action.TECH_DISCOVERED" />
                <data android:mimeType="text/plain" />
            </intent-filter>

            <meta-data
                android:name="android.nfc.action.TECH_DISCOVERED"
                android:resource="@xml/nfc_tech_filter" />

        </activity>

        <activity
            android:name="com.myapp.activity.ReceiveCameraActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            />

        <activity android:name="com.myapp.activity.SendFileActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"/>

        <activity android:name="com.myapp.activity.ReceiveFileActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"/>

        <activity android:name="com.myapp.activity.BaseActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            />

        <activity android:name="com.dommy.qrcode.MainActivity"/>

        <activity android:name="com.google.zxing.activity.CaptureActivity"/>

        <activity android:name="com.NFC.activity.ReadActivity"/>
        <activity android:name="com.NFC.activity.WritingActivity"/>
        <activity android:name="com.NFC.activity.ReadingWritingActivity"/>
    </application>

</manifest>